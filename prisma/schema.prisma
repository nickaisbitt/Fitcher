generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  apiKeys      ApiKey[]
  orders       Order[]
  positions    Position[]
  strategies   TradingStrategy[]
  tradingRules TradingRule[]
  
  @@map("users")
}

model ApiKey {
  id        String   @id @default(uuid())
  userId    String
  exchange  String
  apiKey    String
  apiSecret String
  label     String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, exchange, label])
  @@map("api_keys")
}

model Order {
  id            String    @id @default(uuid())
  userId        String
  exchange      String
  symbol        String
  side          String    // BUY or SELL
  type          String    // MARKET, LIMIT, STOP, STOP_LIMIT, OCO
  status        String    // PENDING, OPEN, PARTIALLY_FILLED, FILLED, CANCELLED, REJECTED, EXPIRED
  quantity      Decimal   @db.Decimal(20, 8)
  filledQuantity Decimal  @db.Decimal(20, 8) @default(0)
  price         Decimal?  @db.Decimal(20, 8)
  stopPrice     Decimal?  @db.Decimal(20, 8)
  limitPrice    Decimal?  @db.Decimal(20, 8)
  averagePrice  Decimal?  @db.Decimal(20, 8)
  timeInForce   String    @default("GTC") // GTC, IOC, FOK
  clientOrderId String?
  exchangeOrderId String?
  commission    Decimal?  @db.Decimal(20, 8)
  commissionAsset String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  filledAt      DateTime?
  
  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([status])
  @@index([exchange, symbol])
  @@map("orders")
}

model Position {
  id            String    @id @default(uuid())
  userId        String
  exchange      String
  symbol        String
  side          String    // LONG or SHORT
  quantity      Decimal   @db.Decimal(20, 8)
  entryPrice    Decimal   @db.Decimal(20, 8)
  markPrice     Decimal?  @db.Decimal(20, 8)
  liquidationPrice Decimal? @db.Decimal(20, 8)
  margin        Decimal?  @db.Decimal(20, 8)
  leverage      Decimal   @default(1) @db.Decimal(10, 2)
  unrealizedPnl Decimal?  @db.Decimal(20, 8)
  realizedPnl   Decimal   @default(0) @db.Decimal(20, 8)
  isOpen        Boolean   @default(true)
  openedAt      DateTime  @default(now())
  closedAt      DateTime?
  
  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, exchange, symbol, isOpen])
  @@index([userId])
  @@map("positions")
}

model TradingStrategy {
  id          String    @id @default(uuid())
  userId      String
  name        String
  description String?
  type        String    // TREND_FOLLOWING, MEAN_REVERSION, BREAKOUT, SCALPING, CUSTOM
  isActive    Boolean   @default(false)
  config      Json      // Strategy-specific configuration
  riskConfig  Json      // Risk management configuration
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@map("trading_strategies")
}

model TradingRule {
  id          String    @id @default(uuid())
  userId      String
  name        String
  description String?
  isActive    Boolean   @default(true)
  conditions  Json      // Array of rule conditions
  actions     Json      // Array of actions to execute
  priority    Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@map("trading_rules")
}

model BacktestResult {
  id             String   @id @default(uuid())
  userId         String
  type           String   // RUN or OPTIMIZE
  exchange       String
  pair           String
  timeframe      String
  strategyType   String
  strategyParams Json
  backtestConfig Json
  result         Json
  createdAt      DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
  @@index([strategyType])
  @@map("backtest_results")
}

model DataSource {
  id            String   @id @default(uuid())
  pair          String
  timeframe     String   // 1m, 5m, 15m, 1h, 4h, 1d, 1w
  exchange      String   // binance, kraken, etc.
  earliestDate  DateTime
  latestDate    DateTime
  totalCandles  Int
  filePath      String   // Path to Parquet file
  fileSize      Int      // Size in bytes
  checksum      String?  // MD5/SHA256 for integrity
  isComplete    Boolean  @default(false)
  lastUpdated   DateTime @default(now())
  createdAt     DateTime @default(now())
  
  @@unique([pair, timeframe, exchange])
  @@index([pair])
  @@index([timeframe])
  @@index([isComplete])
  @@map("data_sources")
}

model IngestionJob {
  id              String   @id @default(uuid())
  pair            String
  timeframe       String
  exchange        String
  status          String   // PENDING, RUNNING, COMPLETED, FAILED
  priority        Int      @default(0) // 0=low, 1=normal, 2=high
  candlesFetched  Int      @default(0)
  candlesStored   Int      @default(0)
  startedAt       DateTime?
  completedAt     DateTime?
  errorMessage    String?
  retryCount      Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([status])
  @@index([pair, timeframe])
  @@index([priority, createdAt])
  @@map("ingestion_jobs")
}

model DataGap {
  id          String   @id @default(uuid())
  pair        String
  timeframe   String
  gapStart    DateTime
  gapEnd      DateTime
  reason      String?  // exchange_maintenance, api_error, etc.
  detectedAt  DateTime @default(now())
  repairedAt  DateTime?
  isRepaired  Boolean  @default(false)
  
  @@index([pair, timeframe])
  @@index([isRepaired])
  @@map("data_gaps")
}
